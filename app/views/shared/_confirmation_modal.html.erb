<%# locals: (title:"Confirm", title_content: nil, body_content: nil, id: nil) %>
<dialog id="modal_confirmation<%= "_#{id}" if id.present? %>" tabindex="-1"
        aria-labelledby="modal_title_confirmation_<%= id %>"
        aria-modal="true"
        class="dialog overflow-visible relative justify-center items-center md:inset-0 h-fit p-1 rounded-lg shadow
        bg-white dark:bg-gray-700 max-h-fit"
        data-dialog-target="dialog">
  <!-- Modal header -->
  <div class="flex items-center justify-between p-2 border-b rounded-t dark:border-gray-600">
    <h2 id="modal_title_confirmation_<%= id %>" class="text-lg font-semibold text-gray-900 dark:text-white">
      <%= title_content || title %>
    </h2>
    <button data-action="dialog#close" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white">
      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
      </svg>
      <span class="sr-only">Close modal</span>
    </button>
  </div>

  <!-- Modal body -->
  <div id="modal_body" data-dialog-target="modalBody" class="p-4 text-gray-700 dark:text-gray-300">
    <%= body_content %>
  </div>
  <%= render "shared/spinner", start_hidden: true %>
</dialog>