<h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
  Sign in to your account
</h1>
<%= render "shared/notification", id: "sign_in" %>

<%= form_with(url: sign_in_path) do |form| %>
  <div>
    <%= form.label :username_or_email, "Email or Username",
                   style: "display: block",
                   class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.text_field :username_or_email,
                        value:        params[:email_hint],
                        autofocus:    true,
                        autocomplete: "email",
                        class:        "bg-tertiary-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                                    focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700
                                    dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500
                                    dark:focus:border-blue-500",
                        placeholder:  "name@company.com or username",
                        required:     "" %>
  </div>
  <div class="mt-2">
    <%= form.label :password, style: "display: block", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= form.password_field :password,
                            autocomplete: "current-password",
                            class:        "bg-tertiary-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg
                                        focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700
                                        dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500
                                        dark:focus:border-blue-500",
                            required:     "" %>
  </div>
  <div class="flex items-center justify-between my-2">
    <%= link_to "Forgot password?",
                new_identity_password_reset_path,
                class: "text-sm font-medium text-primary-600 hover:underline dark:text-primary-500" %>
  </div>
  <%= render "shared/buttons/form_submit_button", text: "Sign in", form: form, extra_classes: "w-full" %>
  <p class="text-sm font text-gray-500 dark:text-gray-400">
    Don't have an account yet?
    <%= link_to "Sign up", sign_up_path, class: "font-medium text-primary-600 hover:underline dark:text-primary-500" %>
  </p>
<% end %>

