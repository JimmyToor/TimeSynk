<!DOCTYPE html>
<html>
  <head>
    <title>timeSynk</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "recurring_select", data: { turbo_track: "reload" } %>
    <%= javascript_include_tag "application", "recurring_select", data: { turbo_track: "reload" }, type: "module" %>
  </head>

  <body class="dark:bg-gray-900 dark:text-white">
    <%= render partial: "shared/navbar" %>

    <div class="p-4 sm:ml-64">
      <div class="p-4 mt-14">
        <%= yield %>
      </div>
    </div>
    <div id="modal">
      <%= render partial: 'shared/modal', locals: {loading: true} %>
    </div>
  </body>
</html>
