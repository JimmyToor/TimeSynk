<p style="color: green"><%= notice %></p>


<%= modal_wrapper(@schedule.name) do %>
  <%= render @schedule %>

  <div>
    <%= link_to "Edit this schedule", edit_schedule_path(@schedule) %> |
    <%= button_to "Destroy this schedule", @schedule, method: :delete %>
  </div>
<% end %>

<%= link_to "Back to schedules", schedules_path %>

<div data-controller="calendar" data-calendar-schedule-id=<%= @schedule.id %>>
  <%= render partial: 'calendars/calendar' %>>
</div>
