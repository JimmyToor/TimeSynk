<%# locals: (schedule:) %>
<p style="color: green"><%= notice %></p>
<%= content_tag(:div, id:dom_id(schedule, :show)) do %>

  <%= render partial: "schedules/show_content", locals: {schedule: schedule} %>
  <div class="mt-4">
    <%= render "shared/buttons/secondary_link", path: schedules_path, text: "Back to Schedules" %>
  </div>

  <div data-controller="calendar" data-calendar-interactive="true" data-calendar-schedule-id=<%= schedule.id %> data-turbo-permanent>
    <%= render partial: 'calendars/calendar' %>
  </div>

<% end %>
