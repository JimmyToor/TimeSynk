<%= form_with(id: "search-form",
              url:games_path(format: :turbo_stream),
              method: :get,
              data: {search_target: "form"}) do |form| %>
  <label for="query" class="sr-only">Search</label>
  <div class="relative">
    <div class="pointer-events-none absolute inset-y-0 flex items-center start-0 ps-3">
      <svg class="h-4 w-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
           xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
      </svg>
    </div>
    <div class="flex">
      <%= form.text_field :query, name:"query", data: {game_selection_target:"query", search_target:"query"}, 
                          class:"block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg 
                          bg-tertiary-50focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600
                          dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500",
                          placeholder:"Search Games..." %>
      <%= render "shared/buttons/search_submit_button", form: form, turbo_frame_id: "game_list" %>
    </div>
    <%= render "shared/buttons/search_reset_button", form: form, extra_classes:"end-16 bottom-2.5" %>
  </div>
<% end %>