<%= turbo_frame_tag dom_id(game) do %>
  <tr class="border-b dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700">
    <th scope="row" class="flex items-center px-4 py-2 font-medium text-gray-900 whitespace-nowrap dark:text-white">
      <%= display_game_art_and_name(game: game) %>
    </th>
    <td class="px-4 py-2">
      <span class="bg-primary-100 text-primary-800 text-xs font-medium px-2 py-0.5 rounded dark:bg-primary-900 dark:text-primary-300"> <%= game.platforms.join(", ") %> </span>
    </td>
    <%= yield if block_given? %>
  </tr>
<% end %>