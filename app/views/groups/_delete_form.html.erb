<%# locals: (group:) %>
<div id="group_<%= group.id %>_delete_form" data-controller="confirmation" class="space-y-3">
  <%= render "shared/notification", id: "group_#{group.id}_delete_form" %>

  <div>
    <label>
      <%= t("group.destroy.confirm_name") %>
      <input id="group_<%= group.id %>_delete_confirm_name_input"
             class="mt-2 w-full rounded-md px-3 text-base text-black outline outline-1
                      outline-gray-300 bg-error-50 py-1.5 dark:text-white -outline-offset-1
                      focus:outline focus:outline-2 focus:-outline-offset-2 focus:outline-orange-600 sm:text-sm/6"
             data-confirmation-target="input"
             autofocus="autofocus"
             data-confirmation-content="<%= group.name %>"
             data-action="confirmation#check"/>
    </label>
  </div>

  <div>
    <label>
      <input id="group_<%= group.id %>_delete_confirm_checkbox_input" data-confirmation-target="input" data-action="confirmation#check" type="checkbox" autofocus/>
      <%= t("group.destroy.confirm") %>
    </label>
  </div>

  <div class="flex justify-between">
    <%= button_to "Delete", group, method: :delete, title: t("group.destroy.title"),
                  data: { confirmation_target: "item", turbo_frame: "_top" },
                  'aria-haspopup': "dialog",
                  disabled: "true",
                  class: "disabled:cursor-not-allowed disabled:bg-red-300 rounded-full bg-red-600 px-3
                          py-1.5 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline
                          focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-red-600" %>
    <button type="button" data-action="dialog#close">Cancel</button>
  </div>
</div>