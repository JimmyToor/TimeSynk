<%= turbo_stream.update_all(".group_name_#{@group.id}", @group.name) %>

<%= turbo_stream.update_all(".group_link_#{@group.id}",
                            partial: "groups/group_link",
                            locals: {group: @group}) %>

<%= turbo_stream.update("modal_frame") %>

<%= turbo_stream_toast(:success,
                       I18n.t("group.update.success", group_name: @group.name),
                       "group_#{@group.id}",
                       highlight: "#{@group.name}") %>