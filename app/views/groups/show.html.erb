<p style="color: green"><%= notice %></p>

<%= render @group %>

<div>
  <h3>Group Invites</h3>
  <%= render @group.invites %>
</div>

<div>
  <%= link_to "Edit this group", edit_group_path(@group) %> |
  <%= link_to "Invite to this group", new_group_invite_path(@group) %>
