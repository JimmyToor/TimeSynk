<%= form_with(model: group) do |form| %>
  <%= render "shared/notification", id: "group_#{group.new_record? ? "new" : group.id}" %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, required: true, autofocus: "autofocus" %>
  </div>

  <div class="mt-2">
    <%= form.submit class: "w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none
      focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600
      dark:hover:bg-primary-700 dark:focus:ring-primary-800 cursor-pointer"%>
  </div>
<% end %>
