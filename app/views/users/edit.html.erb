<h1>User#edit</h1>
<p>Find me in app/views/user/edit.html.erb</p>
<p style="color: green"><%= notice %></p>

<p>Signed as <%= Current.user.email %></p>
<p><%= Current.user.username %></p>

<h2>Login and verification</h2>

<%= form_with(model: Current.user, method: :patch) do |form| %>
  <div>
    <%= form.label :avatar, style: "display:block", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
    <%= user_avatar(Current.user) %>
    <%= form.file_field :avatar %>
    <%= form.submit "Update avatar" %>
  </div>
<% end %>
<%= form_with(model: Current.user, method: :patch) do |form| %>
  <div>
    <%= form.hidden_field :avatar, value: "" %>
    <%= form.submit "Remove avatar" %>
  </div>
<% end %>
<div>
  <%= link_to "See Schedules", schedules_path %>
  <%= link_to "See availabilities", availabilities_path %>
  <%= link_to "Set default availability", edit_user_availability_path %>
</div>

<div>
  <%= link_to "Change password", edit_password_path %>
</div>

<div>
  <%= link_to "Change email address", edit_identity_email_path %>
</div>

<h2>Access history</h2>

<div>
  <%= link_to "Devices & Sessions", sessions_path %>
</div>

<br>
<%= button_to "Sign out", Current.session, method: :delete %>
