<%# locals: (user:, group: nil, game_proposal:nil, game_session:nil,) %>
<%= turbo_frame_tag "user_show_#{user.id}" do %>

  <%= render user %>
  <% if group.present? || game_proposal.present? || game_session.present? %>
    <%= turbo_frame_tag "user_roles_#{user.id}" do %>
      <%= render "roles",
                 user: user,
                 group: group,
                 game_proposal: game_proposal,
                 game_session:game_session %>
    <% end %>
  <% end %>
<% end %>
