<section class="bg-tertiary-50dark:bg-gray-900">
  <%= form_with(url: sign_up_path) do |form| %>
    <% if @user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
          <% @user.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="flex flex-col items-center justify-center px-6 py-8 mx-auto md:h-screen lg:py-0">
      <div class="flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white">
        <%= inline_svg_tag "icons/game-controller.svg", class: "w-8 h-8 mr-2" %>
        TimeSynk
      </div>
      <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
        <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
          <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
            Create an account
          </h1>
          <form class="space-y-4 md:space-y-6" action="#">
            <div>
              <%= form.label :avatar, style: "display:block", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white"  %>
              <%= form.file_field :avatar  %>
            </div>
            <div>
              <%= form.label :email, "Email (Optional)", style: "display: block", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.email_field :email, value: @user.email, autofocus: true, autocomplete: "email", class: "bg-tertiary-50border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", placeholder: "name@company.com"%>
            </div>
            <div>
              <%= form.label :username, style: "display: block", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.text_field :username, minlength: 3, value: @user.username, autofocus: true, autocomplete: "username", class: "bg-tertiary-50border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: "" %>
            </div>
            <div>
              <%= form.label :password, style: "display: block", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.password_field :password, minlength: 8, autocomplete: "current-password", placeholder: "••••••••", class: "bg-tertiary-50border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: "" %>
            </div>
            <div>
              <%= form.label :password_confirmation, "Confirm Password", style: "display: block", class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
              <%= form.password_field :password_confirmation, minlength: 8, autocomplete: "confirm-password", placeholder: "••••••••", class: "bg-tertiary-50border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500", required: "" %>
            </div>

            <div data-controller="timezone">
              <%= form.hidden_field :timezone, data: { timezone_target: "timezoneSelection" }, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-white" %>
            </div>

            <div class="flex items-start">
              <div class="flex items-center h-5">
                <input id="terms" aria-describedby="terms" type="checkbox" class="w-4 h-4 border border-gray-300 rounded bg-tertiary-50focus:ring-3 focus:ring-primary-300 dark:bg-gray-700 dark:border-gray-600 dark:focus:ring-primary-600 dark:ring-offset-gray-800" required="">
              </div>
              <div class="ml-3 text-sm">
                <label for="terms" class="font text-gray-500 dark:text-gray-300">I accept the <a class="font-medium text-primary-600 hover:underline dark:text-primary-500" href="#">Terms and Conditions</a></label>
              </div>
            </div>
            <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800">Create an account</button>
            <p class="text-sm font text-gray-500 dark:text-gray-400">
              Already have an account?
              <%= link_to "Sign in", sign_in_path, class: "font-medium text-primary-600 hover:underline dark:text-primary-500" %>
            </p>
          </form>
        </div>
      </div>
    </div>
  <% end %>
</section>