<div id="<%= dom_id game_session %>">

  <div>
    <%= display_game_art_and_name(game_session.game) %>
  </div>

  <p>
    <strong>Created by:</strong>
    <%= game_session.owner_name %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= game_session.date.in_time_zone(Current.user.timezone) %>
  </p>

  <p>
    <strong>Duration:</strong>
    <%= game_session.duration %>
  </p>

</div>