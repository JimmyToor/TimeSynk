<%# locals: (src:, slim: false, game_proposal: nil, upcoming_game_sessions: [], group_id: nil, limit: GameSession::PAGE_LIMIT_SHORT)  %>
<%= turbo_frame_tag "upcoming_game_sessions",
                    role: "presentation",
                    class: "empty:hidden",
                    data: {controller:"reload-on-restore upcoming-game-session-updates",
                           upcoming_game_session_updates_target: "frame",
                           upcoming_game_session_updates_max_value: limit,
                           upcoming_game_session_updates_group_id_value: group_id,
                           src: "#{src}?limit=#{limit}&format=turbo_stream"} do %>
  <% if slim %>
    <%= render "game_sessions/upcoming_game_sessions_list_slim",
               upcoming_game_sessions: upcoming_game_sessions,
               game_proposal: game_proposal -%>
  <% else %>
    <%= render "game_sessions/upcoming_game_sessions_list", upcoming_game_sessions: upcoming_game_sessions -%>
  <% end %>
<% end %>