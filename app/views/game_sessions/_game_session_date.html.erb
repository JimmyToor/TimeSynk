<%# locals: (user:nil, game_session: nil) %>
<% if Current.user.present? %>
  <%= game_session.date.in_time_zone(Current.user.timezone).strftime("%B %d, %I:%M %p") %>
<% elsif user %>
  <%= game_session.date.in_time_zone(user.timezone).strftime("%B %d, %I:%M %p") %>
<% else %>
  <%= game_session.date.strftime("%B %d, %I:%M %p") %>
<% end %>