<%# locals: (availability: nil, schedules:, pagy:, form_mode: false) %>
<p style="color: green"><%= notice %></p>
<%= content_tag :div do %>
  <div class="overflow-x-auto">
    <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400" data-controller="checkbox-select-all">
      <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
        <tr>
          <% if form_mode %>
            <th scope="col" class="px-4 py-3">Include</th>
          <% end %>
          <th scope="col" class="px-4 py-3">Schedule</th>
          <th scope="col" class="px-4 py-3">Description</th>
          <th scope="col" class="px-4 py-3 hidden lg:table-cell">Frequency</th>
          <th scope="col" class="px-4 py-3 hidden xl:table-cell">Start Date</th>
          <th scope="col" class="px-4 py-3 hidden xl:table-cell">End Date</th>
          <th scope="col" class="px-4 py-3 hidden xl:table-cell">Duration</th>
        </tr>
      </thead>
      <tbody data-controller="element-toggle" data-element-toggle-display-style-value="table-row" data-element-toggle-element-selector-value=".additional-info">
        <% availability.schedules.select { |schedule| schedules.include?(schedule) }.each do |schedule| %>
          <%= render partial:"schedules/schedule_table_row", locals: {form_mode: form_mode, schedule: schedule, checked: true} %>
        <% end if availability.present? %>
      </tbody>
      <tbody data-controller="element-toggle" data-element-toggle-display-style-value="table-row" data-element-toggle-element-selector-value=".additional-info">
        <% (availability.present? ? (schedules - availability.schedules) : schedules).each do |schedule| %>
          <%= render partial:"schedules/schedule_table_row", locals: {form_mode: form_mode, schedule: schedule, checked: false} %>
        <% end %>
      </tbody>
    </table>
  </div>
  <nav class="flex flex-col items-start justify-between p-4 space-y-3 md:flex-row md:items-center md:space-y-0" aria-label="Table navigation">
    <ul class="inline-flex items-stretch -space-x-px ">
      <li data-controller="pagy-initializer">
        <%== pagy_nav_js(@pagy) if @pagy.pages > 1 %>
        <noscript><%== pagy_nav(@pagy) if @pagy.pages > 1 %></noscript>
      </li>
    </ul>
    <span class="text-sm font-normal text-gray-500 dark:text-gray-400"> <%== pagy_info @pagy %></span>
  </nav>
<% end %>

