<%# locals: (availability:, schedules:) %>
<div class="bg-tertiary-50 dark:bg-gray-900 xl:flex xl:flex-col xl:items-center space-y-4">

  <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
    Edit Availability: <%= availability.name %>
  </h1>

  <%= modal_wrapper(@availability.name) do %>
    <%= render "form", availability: availability, schedules: schedules %>
  <% end %>

  <div class="mt-3">
    <%= render "shared/buttons/secondary_link", text: "Back to availabilities", path: availabilities_path, extra_classes: "mt-4" %>
  </div>
</div>