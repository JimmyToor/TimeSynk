<div id="<%= dom_id group_membership %>">

  <div>
    <strong>User:</strong>
    <%= group_membership.user.username %>
  </div>

  <div>
    <strong>Group:</strong>
    <%= group_membership.group.name %>
  </div>

  <div>
    <%= render "groups/roles", group_roles: group_membership.user.roles_for_resource(group_membership.group) %>
  </div>

  <% if local_assigns[:game_proposal].present? %>
    <div>
      <%= render "game_proposals/roles", game_proposal_roles: group_membership.user.roles_for_resource(game_proposal) %>
    </div>
  <% end %>

  <div>
    <strong>Joined:</strong>
    <%= group_membership.created_at.in_time_zone(Current.user.timezone).strftime("%B %d, %Y %I:%M %p") %>
  </div>

</div>
