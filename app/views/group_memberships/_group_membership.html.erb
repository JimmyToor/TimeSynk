<div id="<%= dom_id group_membership %>">

  <div>
    <strong>User:</strong>
    <%= group_membership.user.username %>
  </div>

  <div>
    <strong>Group:</strong>
    <%= group_membership.group.name %>
  </div>

  <div>
    <strong>Group Roles:</strong>
    <% roles = group_membership.user.roles_for_resource(group_membership.group) %>
    <% if roles.any? %>
      <% roles.each do |role| %>
        <div>-<%= role.name.humanize %></div>
      <% end %>
    <% else %>
      <em>None</em>
    <% end %>
  </div>

  <div>
    <strong>Joined:</strong>
    <%= group_membership.created_at.in_time_zone(Current.user.timezone).strftime("%B %d, %Y %I:%M %p") %>
  </div>

</div>
