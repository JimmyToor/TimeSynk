<%# locals: (invite:) %>
<%= form_with(model: [invite.group, invite.group.group_memberships.build(user_id: Current.user.id)],class:"flex flex-col w-full items-center space-y-2") do |form| %>

  <%= render "shared/header_primary" do %>
    <%= raw t("group_membership.accept_invite.title", group_name: content_tag(:span,
                                                                          invite.group_name,
                                                                          class: "text-blue-600 dark:text-blue-500")) %>
  <% end %>

  <%= form.hidden_field :invite_token, value: invite.invite_token %>
  <%= form.hidden_field :user_id, value: Current.user.id %>
  <%= form.submit t("invite.accept_invite"), class:"cursor-pointer text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700
    hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800 shadow-lg
    shadow-blue-500/50 dark:shadow-lg dark:shadow-blue-800/80 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2" %>
<% end %>
