<div id="<%= dom_id invite %>">
  <div>
    <strong>Created By:</strong>
    <%= invite.user.username %>
  </div>

  <div>
    <strong>Invite URL:</strong>
    <%= accept_invite_url(invite_token: invite.invite_token) %>
  </div>

  <div>
    <div class="flex">
      <strong class="mr-2">Roles:</strong>
      <%= render "shared/buttons/icon_link",
                 path: edit_invite_path(invite),
                 title: "Edit Invite",
                 extra_classes: "text-secondary-500 hover:text-secondary-400 dark:text-secondary-200 dark:hover:text-secondary-100",
                 svg_name: "edit" %>
    </div>
    <div class="pl-4 list-inside">
      <% if invite.assigned_role_ids.any? %>
        <% invite.assigned_roles.map { |role| role.name }.each do |role_name| %>
          <div>-<%= role_name.humanize %></div>
        <% end %>
      <% else %>
        <em>None</em>
      <% end %>
    </div>
  </div>

  <div>
    <div class="flex list-inside">
      <strong class="mr-2">Expires at:</strong>
      <%= render "shared/buttons/icon_link",
                 path: edit_invite_path(invite),
                 title: "Edit Invite",
                 extra_classes: "text-secondary-500 hover:text-secondary-400 dark:text-secondary-200 dark:hover:text-secondary-100",
                 svg_name: "edit" %>
    </div>
    <span class="pl-4"><%= invite.expires_at.in_time_zone(Current.user.timezone).strftime("%B %d, %Y, %I:%M %p") %></span>
  </div>
</div>
