<%= content_tag container_tag,
                role: "presentation",
                data: {controller: "dialog", dialog_ignore_submit_success_value: true},
                class: container_classes do %>
  <%= render "shared/buttons/icon_button",
             text: t("generic.attendance"),
             action:"dialog#open",
             title: t("game_session.view_all_attendance"),
             svg_name: "votes",
             button_attributes: {'aria-haspopup': "dialog" },
             extra_classes: "font-semibold #{modal_link_text_classes}",
             icon_classes: modal_link_text_classes %>

  <%= render "game_session_attendances/full_game_session_attendance_modal", game_session: game_session %>
<% end %>
