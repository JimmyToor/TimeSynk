<%= form_with(model: [game_proposal.group, game_proposal], data: { controller: "game-selection" }, local: true) do |form| %>
  <% if game_proposal.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(game_proposal.errors.count, "error") %> prohibited this game_proposal from being saved:</h2>

      <ul>
        <% game_proposal.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= link_to "Browse Games", games_path, data: { turbo_frame: "games_list" } %>
  <%= turbo_frame_tag "games_list" %>

  <div data-game-selection-target="selectedGame">
    <!-- This will be updated when a game is selected -->
  </div>
  <div>
    <%= form.label :game_id, style: "display: block" %>
    <%= form.hidden_field :game_id, data: { game_selection_target: "gameId"} %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.hidden_field :user_id, value: Current.user.id %>
  </div>

  <div>
    <%= form.label :yes_votes, style: "display: block" %>
    <%= form.hidden_field :yes_votes, value: 0 %>
  </div>

  <div>
    <%= form.label :no_votes, style: "display: block" %>
    <%= form.hidden_field :no_votes, value: 0 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
